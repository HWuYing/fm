{
  "compilerOptions": {
    "target": "ESNext",    // 编译目标平台
    "module": "CommonJs", // 组织代码的方式
    "outDir": ".",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,  // 让TypeScript支持为带有装饰器的声明生成元数据
    "experimentalDecorators": true, // 是否启用实验性装饰器特性
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@fm/di": ["./university/di"],
      "@framework/*": ["./framework/*"],
      "@fm/shared": ["./university/shared"],
      "@fm/shared/*": ["./university/shared/*"],
      "dynamic-builder": ["./university/dynamic-builder"],
      "@fm/server": ["./university/server"],
      "@fm/server/*": ["./university/server/*"],
      "@fm/client-side-rendering": ["./university/client-silde-rendering"],
      "@fm/client-side-rendering/*": ["./university/client-silde-rendering/*"],
      "@fm/server-side-rendering": ["./university/server-slide-rendering"],
      "@fm/server-side-rendering/*": ["./university/server-slide-rendering/*"]
    },          
    "typeRoots": [
      "node_modules/@types",
      "./typings/**/*"
    ],
    "lib": [ "DOM", "es2017" ],
  },
  "compileOnSave": false,
  "include": [
    "./university/**/*",
    "./typings/**/*"
  ],
  "exclude": [
    "di",
    "shared",
    "dynamic-builder",
    "server",
    "client-silde-rendering",
    "server-silde-rendering"
  ]
}
