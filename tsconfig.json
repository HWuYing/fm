{
  "compilerOptions": {
    "target": "ESNext",    // 编译目标平台
    "module": "CommonJs", // 组织代码的方式
    "rootDir": "./university",
    "outDir": ".",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,  // 让TypeScript支持为带有装饰器的声明生成元数据
    "experimentalDecorators": true, // 是否启用实验性装饰器特性
    "noImplicitAny": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@hwy-fm/*": ["./university/*"],
      "@hwy-fm/builder": ["./university/dynamic-builder"],
      "@hwy-fm/plugin": ["./university/dynamic-plugin"]
    },
    "typeRoots": [
      "node_modules/@types",
      "./typings/**/*"
    ],
    "lib": [ "DOM", "ES2022" ],
  },
  "compileOnSave": false,
  "include": [
    "./university/**/*",
    "./tools/**/*",
    "./typings/**/*"
  ],
  "exclude": []
}
